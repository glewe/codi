{
  "name": "lewe/codi",
  "version": "6.3.0",
  "description": "CODI - Application boilerplate based on CodeIgniter 4",
  "license": "MIT",
  "type": "project",
  "homepage": "https://www.lewe.com",
  "support": {
    "forum": "https://github.com/glewe/codi/issues",
    "source": "https://github.com/glewe/codi"
  },
  "require": {
    "php": "^8.1 || ^8.2 || ^8.3 || ^8.4",
    "endroid/qr-code": "^6.1",
    "codeigniter4/framework": "^4.7",
    "robthree/twofactorauth": "^3.0",
    "ext-json": "*",
    "ext-curl": "*",
    "ext-openssl": "*",
    "ext-mbstring": "*",
    "ext-ctype": "*"
  },
  "require-dev": {
    "fakerphp/faker": "^1.24",
    "matthiasmullie/minify": "^1.3",
    "mikey179/vfsstream": "^1.6",
    "phpunit/phpunit": "^13.0",
    "phpstan/phpstan": "^2.1"
  },
  "autoload": {
    "exclude-from-classmap": [
      "**/Database/Migrations/**"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Support\\": "tests/_support"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "scripts": {
    "analyze": "phpstan analyze",
    "build": [
      "php tools/update_version.php",
      "composer run lint:css",
      "php tools/minify.php"
    ],
    "build:prod": [
      "php tools/update_version.php",
      "composer run lint:css",
      "php tools/minify.php",
      "composer install --no-dev --optimize-autoloader"
    ],
    "docs": "php tools/phpDocumentor.phar -d app -t php_doc --title=\"CODI\" -s template.color=blue && php tools/apply_dark_mode.php",
    "lint:css": [
      "stylelint --quiet-deprecation-warnings \"public/css/lewe.css\"",
      "stylelint --quiet-deprecation-warnings \"public/css/styles.css\"",
      "stylelint --quiet-deprecation-warnings \"public/css/custom.css\""
    ],
    "test": "phpunit"
  }
}
